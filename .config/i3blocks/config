# Default file located /etc/i3blocks.conf
command=~/.config/i3blocks/scripts/$BLOCK_NAME
separator_block_width=15
markup=none

[spotify]
interval=5

[volume]
label=VOL
instance=Master
interval=once
signal=10

[disk]
label=HOME
interval=30

[cpu_usage]
label=CPU
interval=1
min_width=CPU 100.00%

[memory]
label=MEM
interval=30

[battery]
markup=pango
instance=0
interval=10

[time]
command=date '+%Y-%m-%d %r'
interval=5
